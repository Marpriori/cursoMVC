@model IEnumerable<Treinamento_Benner.Models.Genero>



<div class="col-xs-12">
    <h1>Gênero @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary btn-xs" })</h1>
    <hr />
    <div class="row" style="max-width:400px">

        <div class="col-xs-12">
            <table class="table table-bordered table-striped table-hover table-condensed">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.Albums)</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Albums, "Albuns")
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-xs" }) 
                        </td>
                        <td>
                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs" }) 
                        </td>
                        <td>
                            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>